<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/topic_tv"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/message_count"
        android:background="@drawable/circular_bg"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:layout_marginEnd="30dp"
        android:layout_alignTop="@+id/topic_tv"
        android:layout_alignEnd="@+id/timestamp_tv"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="No message received."
        android:id="@+id/message_tv"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/message_count"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="22:14 02-01-2014"
        android:id="@+id/timestamp_tv"
        android:singleLine="true"
        android:layout_alignBaseline="@+id/message_tv"
        android:layout_alignBottom="@+id/message_tv"
        android:layout_alignParentEnd="true" />
</RelativeLayout>